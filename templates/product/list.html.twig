{% extends 'base.html.twig' %}

{% block title %}{{ 'products'|trans }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ 'products'|trans }}</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {% if product.Image %}
                        <img src="{{ product.Image.url }}" class="card-img-top" alt="{{ product.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text"><strong>{{ 'price'|trans }}:</strong> {{ product.price }} â‚¬</p>
                        <p class="card-text"><strong>{{ 'stock'|trans }}:</strong> {{ product.stock }}</p>
                        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary" data-action="cart#add">{{ 'add_to_cart'|trans }}</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-secondary">{{ 'edit'|trans }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
