{% extends 'base.html.twig' %}

{% block title %}Your Cart{% endblock %}

{% block body %}
    <h1>Your Cart</h1>

    {% if cart|length > 0 %}
        <table class="table" data-controller="cart">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr data-cart-target="itemRow" data-product-id="{{ item.product.id }}">
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="btn btn-danger btn-sm" data-action="cart#remove">Remove</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right"><strong>Total:</strong></td>
                    <td data-cart-target="cartTotal">{{ total }} €</td>
                    <td>
                        <a href="{{ path('cart_checkout') }}" class="btn btn-success">Checkout</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Your cart is empty.</p>
    {% endif %}
{% endblock %}
